<%- include('../includes/head.ejs') %>


<body>
    <div class="conteiner m-5">
    <section class="section box has-text-centered">
        <h1 class="title has-text-info is-size-1 has-text-centered is-family-monospace">Node-MongoDB Blog</h1>
        <a href="/articles/new" class="button is-warning is-light my-4 is-size-4">Add new article</a>
        <div class="columns is-4 m-4">
        <% articles.forEach(article => { %>
            <div class="card m-2">
                <div class="card-content">
                    <p class="title"><%= article.title %></p>
                    <p><%= article.createdAt.toLocaleDateString() %></p>
                  <div class="content">
                    <% if(article.content.length >= 25) { %>
                        <%= article.content.slice(0, 25).concat('...') %>
                    <% }else{ %>
                        <%= article.content %>
                    <% } %>
                  </div>
                </div>
                <footer class="card-footer">
                    <a href="/articles/<%= article.id%>" class="card-footer-item button is-link is-light px-4 mr-1">Read more</a>
                    <div class="is-lightcard-footer-item mr-1">
                    <form action="/articles/like/<%= article.id%>" method="POST">
                        <button class="button  is-link is-light" type="submit">
                            <span class="p-2"><%= article.like %></span>
                            <svg role="img" xmlns="http://www.w3.org/2000/svg" width="30px" height="30px" viewBox="0 0 24 24" aria-labelledby="thumbUpIconTitle" stroke="hsl(217, 71%, 53%)" stroke-width="1" stroke-linecap="square" stroke-linejoin="miter" fill="none" color="#ffff"> <title id="thumbUpIconTitle">Thumb Up</title> <path d="M8,8.73984815 C8,8.26242561 8.17078432,7.80075162 8.4814868,7.43826541 L13.2723931,1.84887469 C13.7000127,1.34998522 14.4122932,1.20614658 15,1.5 C15.5737957,1.78689785 15.849314,2.45205792 15.6464466,3.06066017 L14,8 L18.6035746,8 C18.7235578,8 18.8432976,8.01079693 18.9613454,8.03226018 C20.0480981,8.22985158 20.7689058,9.27101818 20.5713144,10.3577709 L19.2985871,17.3577709 C19.1256814,18.3087523 18.2974196,19 17.3308473,19 L10,19 C8.8954305,19 8,18.1045695 8,17 L8,8.73984815 Z"/> <path d="M4,18 L4,9"/> </svg></button>
                    </form>
                </div>
                    <div class="is-lightcard-footer-item">
                        <form action="/articles/dislike/<%= article.id%>" method="POST">
                            <button class="button is-link is-light" type="submit">
                                <span><%= article.dislike %></span>
                                <svg role="img" xmlns="http://www.w3.org/2000/svg" width="30px" height="30px" viewBox="0 0 24 24" aria-labelledby="thumbDownIconTitle" stroke="hsl(217, 71%, 53%)" stroke-width="1" stroke-linecap="square" stroke-linejoin="miter" fill="none" color="#ffff"> <title id="thumbDownIconTitle">Thumb Down</title> <path d="M16,15.2601518 C16,15.7375744 15.8292157,16.1992484 15.5185132,16.5617346 L10.7276069,22.1511253 C10.2999873,22.6500148 9.58770685,22.7938534 9,22.5 C8.42620429,22.2131021 8.15068597,21.5479421 8.35355339,20.9393398 L10,16 L5.39642543,16 C5.27644223,16 5.15670242,15.9892031 5.03865456,15.9677398 C3.95190186,15.7701484 3.23109421,14.7289818 3.42868561,13.6422291 L4.70141289,6.64222912 C4.87431859,5.69124773 5.70258042,5 6.66915271,5 L14,5 C15.1045695,5 16,5.8954305 16,7 L16,15.2601518 Z"/> <path d="M20,15 L20,6"/> </svg></button>
                        </form>
                    </div>
                  </footer>
              </div>

       
        
        <% }) %>
        </div>
    </section>
</div>

<%- include('../includes/end.ejs') %>